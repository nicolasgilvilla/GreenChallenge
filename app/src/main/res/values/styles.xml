<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BarLayoutThird" parent="AppBarLayout">
        <item name="android:background">@color/green_light</item>
    </style>

    <style name="AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ImageViewBackToolbar" parent="ImageViewToolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.2</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ImageViewToolbar" parent="@android:style/ButtonBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.2</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextViewTitleToolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_15_dimen</item>
    </style>

    <style name="ContainerToolbarPrimary" parent="ContainerToolbar" />

    <style name="ContainerToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <dimen name="text_15_dimen">15sp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
</resources>